<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/bg_dialog_customize">

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:textColor="#232323"/>

    <TextView
        android:id="@+id/description_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_dialog"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:lineSpacingExtra="2dp"
        android:textColor="#6f6f6f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_below="@+id/description_dialog">

        <TextView
            android:id="@+id/bt_ok_dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorButtonDialogPrimary"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/bt_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/colorButtonDialogPrimary"
            android:textAllCaps="true"/>

    </LinearLayout>

</RelativeLayout>