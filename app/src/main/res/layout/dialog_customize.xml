<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_dialog_customize">

    <TextView
        android:id="@+id/title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title dialog"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_alignParentTop="true"
        android:textColor="#232323"/>

    <TextView
        android:id="@+id/description_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_dialog"
        android:textSize="14sp"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:lineSpacingExtra="2dp"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
        android:textColor="#6f6f6f"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description_dialog"
        android:orientation="horizontal"
        android:gravity="right">

        <TextView
            android:id="@+id/bt_deny_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ef3538"
            android:text="Deny"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/bt_ok_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#008876"
            android:text="OK"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/bt_cancel_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#008876"
            android:text="CANCEL"
            android:textAllCaps="true"/>

    </LinearLayout>

</RelativeLayout>